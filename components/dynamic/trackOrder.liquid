<!DOCTYPE html>
<html>

<head>
    {% render 'partials/header.liquid', client: client, user: user %}
</head>

<body class="bg-primary-100 font-body text-white">
    {% render 'partials/navbar.liquid', client: client, user: user, icon: icon %}
    <div class="my-12 md:w-6/12 mx-auto justify-center">
        <div class="bg-primary-300 rounded-lg shadow-md py-10 px-10">
            <p class="pb-6 text-center text-gray-300 text-4xl">Get the track of your current orders</p>
            <div class="flex justify-center mx-auto md:w-6/12">
                <input id="email" type="email"
                    class="border border-gray-300 text-gray w-full outline-none bg-transparent py-3 px-6"
                    placeholder="Email address" />
                <a onclick="trackOrder()"
                    class="bg-transparent px-3 border justify-center border-gray-300 ml-3 py-3 hover:bg-white hover:text-black duration-200 cursor-pointer"><i
                        class="fas fa-arrow-right"></i></a>
            </div>
            {% if Order %}
            <div class='mt-10 w-8/12'>
                {% for order in Orders %}
                <div class="bg-primary-100 mt-2 mr-2 mb-2 w-full rounded-lg shadow-md py-5 px-3">
                    <div class="flex flex-col md:flex-row justify-start items-start md:items-center">
                        <div class="flex-shrink-0 mx-auto md:mx-0">
                            <img src="/public/productImages/{{ order.image }}" class="w-32 rounded-lg mx-1">
                        </div>
                        <div class="ml-2 mt-2 md:mt-0">
                            <p class="text-lg font-light">ORDER ID: <b class="font-bold">{{ order.orderID }}</b></p>
                            <p class="text-lg font-light">Username: {{ order.firstname }} {{ order.lastname }}</p>
                            <p class="text-lg font-semibold">Product: {{ order.name }}</p>
                            <p class="font-light text-sm">Quantity: {{ order.quantity }}</p>
                            <p class="font-light text-sm">Size: {{ order.size }}</p>
                            <p class="font-light text-sm">Price: LE {{ order.price }} EGP</p>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
            {% endif %}
        </div>
    </div>

    <footer>
        {% render 'partials/footer.liquid' %}
        <script src="/public/scripts/actions.js"></script>
    </footer>
</body>

</html>