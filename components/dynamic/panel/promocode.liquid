<!DOCTYPE html>
<html>

<head>
    {% render 'partials/header.liquid', client: client, user: user %}
</head>

<body class="bg-primary-100 font-body text-white">
    {% render 'partials/navbar.liquid', client: client, user: user, icon: icon %}
    <div class="mt-20 w-9/12 mx-auto justify-center">
        <div class="sm:px-8 md:px-16 sm:py-8">
            <main class="container mx-auto max-w-screen-lg h-full">
                <p class="text-center text-3xl font-semibolds">Promo Details</p>
                <p class="text-center" id="productID"></p>
                <p id="alert" class="text-center text-red-600"></p>
                <div class="items-center flex mx-auto mt-12">
                    <div class="w-full">
                        <div class="md:flex">
                            <div class="mr-10 w-full">
                                <p class="font-light text-lg py-2 ">Promo code:</p>
                                <input id="promo"
                                    class="rounded-lg shadow-lg w-4/12 text-md w-full bg-transparent outline-none py-2 px-4 border border-gray-400 border-opacity-60"
                                    placeholder="e.g newYear25">
                            </div>
                            <div class="ml-auto w-full">
                                <p class="font-light text-lg py-2">Promo discount amount:</p>
                                <div class="flex items-center">
                                    <p class="mr-2">LE:</p>
                                    <input id="discount" type="number"
                                        class="rounded-lg shadow-lg w-4/12 text-md w-full bg-transparent outline-none py-2 px-4 border border-gray-400 border-opacity-60"
                                        placeholder="e.g 250">
                                </div>
                                <p class="font-light text-lg py-2">Unlimited:</p>
                                <div class="flex items-center">
                                    <div class="flex items-center gap-3">
                                        <label for="unlimited" class="relative inline-flex items-center cursor-pointer">
                                            <input type="checkbox" id="unlimited" name="unlimited" class="sr-only peer">
                                            <div class="w-11 h-6 bg-gray-200 rounded-full peer 
                peer-focus:ring-4 peer-focus:ring-blue-300 
                dark:peer-focus:ring-blue-800 
                dark:bg-gray-700 
                peer-checked:after:translate-x-full 
                peer-checked:after:border-white 
                after:content-[''] 
                after:absolute 
                after:top-0.5 
                after:left-[2px] 
                after:bg-white 
                after:border-gray-300 
                after:border 
                after:rounded-full 
                after:h-5 
                after:w-5 
                after:transition-all 
                dark:border-gray-600 
                peer-checked:bg-blue-600">
                                            </div>
                                            <span class="ml-3 text-sm font-medium text-gray-900 dark:text-gray-300">
                                                Toggle Switch
                                            </span>
                                        </label>
                                    </div>

                                </div>
                            </div>
                        </div>
                        <hr class="w-8/12 mx-auto border-gray-300 border-opacity-30 border mt-10 mb-4">
                        <p class="font-semibold text-lg">Others:</p>
                        <div class="md:flex mt-5">
                            <div class="ml-3 w-full ">
                                <p class="font-light text-lg py-2">Limit:</p>
                                <div class="flex items-center">
                                    <input id="limit" type="number"
                                        class="rounded-lg shadow-lg w-4/12 text-md w-full bg-transparent outline-none py-2 px-4 border border-gray-400 border-opacity-60"
                                        placeholder="e.g 1">
                                </div>
                            </div>
                            <div class="ml-3 w-full ">
                                <p class="font-light text-lg py-2">End Date:</p>
                                <div class="flex items-center">
                                    <input id="date"
                                        class="rounded-lg shadow-lg w-4/12 text-md w-full bg-transparent outline-none py-2 px-4 border border-gray-400 border-opacity-60"
                                        placeholder="e.g 15 days">
                                </div>
                            </div>
                        </div>
                        <div class="flex mt-6 mb-10">
                            <a onclick="addPromo()"
                                class="text-center mx-auto bg-primary-200 py-2 px-4 rounded-lg text-gray-200 hover:text-gray-600 duration-300 cursor-pointer font-light text-2xl">Add
                                Promo&nbsp;<i class="fa-solid fa-arrow-right"></i></a>
                        </div>
                    </div>
                </div>
        </div>
        <footer>
            {% render 'partials/footer.liquid' %}
            <script src="/public/scripts/promocode.js"></script>
        </footer>
</body>

</html>