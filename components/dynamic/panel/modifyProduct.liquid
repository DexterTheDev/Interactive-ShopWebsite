<!DOCTYPE html>
<html>

<head>
    {% render 'partials/header.liquid', client: client, user: user %}
</head>

<body class="bg-primary-100 font-body text-white">
    {% render 'partials/navbar.liquid', client: client, user: user, icon: icon %}
    <div class="mt-20 w-9/12 mx-auto justify-center">
        <div class="sm:px-8 md:px-16 sm:py-8">
            <main class="container mx-auto max-w-screen-lg h-full">
                <p class="text-center text-3xl font-semibolds">Product Details</p>
                <p class="text-center" id="productID"></p>
                <p id="alert" class="text-center text-red-600"></p>
                <div class="items-center flex mx-auto mt-12">
                    <div class="w-full">
                        <div class="md:flex">
                            <div class="mr-10 w-full">
                                <p class="font-light text-lg py-2 ">Product name:</p>
                                <input id="name"
                                    class="rounded-lg shadow-lg w-4/12 text-md w-full bg-transparent outline-none py-2 px-4 border border-gray-400 border-opacity-60"
                                    placeholder="Name" value="{{ product.name }}">
                            </div>
                            <div class="ml-auto w-full">
                                <p class="font-light text-lg py-2">Product price:</p>
                                <div class="flex items-center">
                                    <p class="mr-2">LE:</p>
                                    <input id="price" type="number"
                                        class="rounded-lg shadow-lg w-4/12 text-md w-full bg-transparent outline-none py-2 px-4 border border-gray-400 border-opacity-60"
                                        placeholder="Price" value="{{ product.price }}">
                                </div>
                                <p class="font-light text-lg py-2">Sale:&nbsp;<b class="text-gray-300 text-sm">Leave empty for no sale</b></p>
                                <div class="flex items-center">
                                    <p class="mr-2">LE:</p>
                                    <input id="sale" type="number"
                                        class="rounded-lg shadow-lg w-4/12 text-md w-full bg-transparent outline-none py-2 px-4 border border-gray-400 border-opacity-60"
                                        placeholder="New Price after Sale" value="{{ product.sale }}">
                                </div>
                            </div>
                        </div>
                        <hr class="w-8/12 mx-auto border-gray-300 border-opacity-30 border mt-10 mb-4">
                        <p class="font-semibold text-lg">Product Stock Sizes:</p>
                        <div class="md:flex mt-5">
                            <div class="ml-3 w-full ">
                                <p class="font-light text-lg py-2">XS:</p>
                                <div class="flex items-center">
                                    <p class="mr-2">Stock:</p>
                                    <input id="xs" type="number"
                                        class="rounded-lg shadow-lg w-4/12 text-md w-full bg-transparent outline-none py-2 px-4 border border-gray-400 border-opacity-60"
                                        placeholder="Amount" value="{{ product.sizes.xs }}">
                                </div>
                            </div>
                            <div class="ml-3 w-full">
                                <p class="font-light text-lg py-2">SMALL:</p>
                                <div class="flex items-center">
                                    <p class="mr-2">Stock:</p>
                                    <input id="small" type="number"
                                        class="rounded-lg shadow-lg w-4/12 text-md w-full bg-transparent outline-none py-2 px-4 border border-gray-400 border-opacity-60"
                                        placeholder="Amount" value="{{ product.sizes.small }}">
                                </div>
                            </div>
                            <div class="ml-3 w-full">
                                <p class="font-light text-lg py-2">MEDIUM:</p>
                                <div class="flex items-center">
                                    <p class="mr-2">Stock:</p>
                                    <input id="md" type="number"
                                        class="rounded-lg shadow-lg w-4/12 text-md w-full bg-transparent outline-none py-2 px-4 border border-gray-400 border-opacity-60"
                                        placeholder="Amount" value="{{ product.sizes.md }}">
                                </div>
                            </div>
                            <div class="ml-3 w-full">
                                <p class="font-light text-lg py-2">LARGE:</p>
                                <div class="flex items-center">
                                    <p class="mr-2">Stock:</p>
                                    <input id="large" type="number"
                                        class="rounded-lg shadow-lg w-4/12 text-md w-full bg-transparent outline-none py-2 px-4 border border-gray-400 border-opacity-60"
                                        placeholder="Amount" value="{{ product.sizes.lg }}">
                                </div>
                            </div>
                            <div class="ml-3 w-full">
                                <p class="font-light text-lg py-2">X-LARGE:</p>
                                <div class="flex items-center">
                                    <p class="mr-2">Stock:</p>
                                    <input id="xl" type="number"
                                        class="rounded-lg shadow-lg w-4/12 text-md w-full bg-transparent outline-none py-2 px-4 border border-gray-400 border-opacity-60"
                                        placeholder="Amount" value="{{ product.sizes.xl }}">
                                </div>
                            </div>
                        </div>
                        <hr class="w-8/12 mx-auto border-gray-300 border-opacity-30 border mt-10 mb-4">
                        <p class="font-semibold text-lg">Product Description:</p>
                        <textarea id="description"
                            class="rounded-lg h-44 mt-5 shadow-lg text-md w-full bg-transparent outline-none py-3 px-4 border border-gray-400 border-opacity-60"
                            placeholder="Stretchy material spandex that fits snugly against the torso">{{ product.description }}</textarea>
                        <div class="flex mt-6 mb-10">
                            <a onclick="modifyProduct('{{ product.id }}')"
                                class="text-center mx-auto bg-primary-200 py-2 px-4 rounded-lg text-gray-200 hover:text-gray-600 duration-300 cursor-pointer font-light text-2xl">Update&nbsp;<i class="fa-solid fa-arrow-right"></i></a>
                        </div>
                    </div>
                </div>
        </div>
        <footer>
            {% render 'partials/footer.liquid' %}
            <script src="/public/scripts/actions.js"></script>
        </footer>
</body>

</html>