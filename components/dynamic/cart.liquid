<!DOCTYPE html>
<html>

<head>
    {% render 'partials/header.liquid', client: client, user: user %}
</head>

<body class="bg-primary-100 font-body text-white">
    {% render 'partials/navbar.liquid', client: client, user: user, icon: icon %}
    <div class="my-12 w-11/12 md:w-9/12 mx-auto justify-center">
        <div class="bg-primary-300 rounded-lg shadow-md py-10 px-10">
            <p class="text-3xl text-center font-semibold">Your cart products</p>
            <p class="text-center text-red-600" id="alert"></p>
            <hr class='border border-gray-500 mx-auto my-7 border-opacity-30 w-8/12'>
            <div>
                {% for product in products %}
                <div class="bg-primary-100 mt-2 mr-2 mb-2 w-full rounded-lg shadow-md py-5 px-3">
                    <div class="flex flex-col md:flex-row justify-start items-start md:items-center">
                        <div class="flex-shrink-0 mx-auto md:mx-0">
                            <img src="/public/productImages/{{ product.image }}" class="w-32 rounded-lg mx-1">
                        </div>
                        <div class="ml-2 mt-2 md:mt-0">
                            <p class="text-lg font-semibold">{{ product.name }}</p>
                            <p class="font-light text-sm">Quantity: {{ product.quantity }}</p>
                            <p class="font-light text-sm">Size: {{ product.size }}</p>
                            <p class="font-light text-sm">
                                {% if product.isSale %}After Sale Price{% else %}Price{% endif%}: LE {{ product.price }} EGP
                            </p>
                        </div>
                    </div>
                </div>
                {% else %}
                <p class="text-center text-xl py-3">Your cart is empty</p>
                {% endfor %}
            </div>
            <button onclick="location.href='/buy?type=cart'" class="py-3 px-6 bg-transparent hover:bg-white hover:border-white hover:text-black duration-300 border border-white rounded-xl mt-6 w-full">Checkout</button>
            <button onclick="clearCart()" class="py-3 px-6 bg-transparent hover:bg-red-700 hover:border-red-700 hover:text-white duration-300 border border-white rounded-xl mt-6 w-full">Clear Cart</button>
        </div>
    </div>

    <footer>
        {% render 'partials/footer.liquid' %}
        <script src="/public/scripts/actions.js"></script>
    </footer>
</body>

</html>