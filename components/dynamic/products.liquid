<!DOCTYPE html>
<html>

<head>
    {% render 'partials/header.liquid', client: client, user: user %}
</head>

<body class="bg-primary-100 font-body text-white">
    {% render 'partials/navbar.liquid', client: client, user: user, icon: icon %}
    <div class="mb-44 mt-20 w-9/12 mx-9 md:mx-auto justify-center">

        <p class="text-2xl mb-6 font-semibold">Our Compressions:</p>
        <div class="md:flex flex-grow">
            {% for product in products %}
            <div onclick="location.href='/products/{{ product.id }}'" class="cursor-pointer shadow-md rounded-lg w-80 border border-primary-200 m-2">
                <img src="/public/productImages/{{ product.image }}"
                    class="rounded-t-lg object-contain w-full h-80 bg-white bg-opacity-90 border-b border-gray-300 border-opacity-30" />
                <div class="ml-6 my-4">
                    <p class="font-bold mt-2 text-2xl">{{ product.name }}</p>
                    {% if product.sale > 0 %}
                    <div class="flex">
                    <p class="font-semibold text-lg text-gray-200 line-through">LE {{ product.price }}</p>
                    <p class="font-semibold text-lg text-gray-200 ml-2">LE {{ product.sale }} EGP</p>
                    </div>
                    {% else %}
                    <p class="font-semibold text-lg text-gray-200">LE {{ product.price }} EGP</p>
                    {% endif %}
                </div>
                <button class="cursor-pointer rounded-b-lg w-full bg-primary-200 py-3 font-semibold hover:opacity-80 duration-300">VIEW</button>
            </div>

            {% else %}
            <p class="text-lg mt-5 text-gray-400">There're no products currently listed</p>
            {% endfor %}
        </div>
    </div>
    </div>
    <footer>
        {% render 'partials/footer.liquid' %}
        <script src="/public/scripts/panel.js"></script>
    </footer>
</body>

</html>